pkgname=labwc-git
pkgver=r1117.1f0055a
pkgrel=1
pkgdesc="Stacking Wayland compositor"
arch=('x86_64')
url="https://github.com/johanmalm/labwc"
license=('GPL2')
depends=('wlroots' 'cairo' 'pango' 'libxml2' 'glib2' 'libinput'
				 'libxkbcommon' 'wayland')
makedepends=('meson' 'git' 'ninja' 'wayland-protocols')
conflicts=('labwc')
source=('git+https://github.com/johanmalm/labwc.git')
sha1sums=('SKIP')

pkgver() {
	cd ${pkgname%-git}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd ${pkgname%-git}
  arch-meson -Dxwayland=disabled ../build
  ninja -C ../build
}

package() {
  cd ${pkgname%-git}
  DESTDIR=${pkgdir} arch-meson install -C ../build
}
